arxivId = {1510.06631},
author = {Collet, C. and Nesvadba, N. P. H. and {De Breuck}, C. and Lehnert, M. D. and Best, P. and Bryant, J. J. and Hunstead, R. and Dicken, D. and Johnston, H.},
