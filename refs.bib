file = {:C$\backslash$:/Users/HOME/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Collet et al. - 2015 - Kinematic signatures of AGN feedback in moderately powerful radio galaxies at z{\~{}}2 observed with SINFONI.pdf:pdf},
