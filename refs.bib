doi = {10.1086/171198},
issn = {0004-637X},
journal = {\apj},
keywords = {Active Galactic Nuclei,Astronomical Spectroscopy,Emission Spectra,H Alpha Line,H Ii Regions,Interacting Galaxies,Interstellar Matter,Line Spectra,Nebulae,Photoionization,Radio Galaxies,Red Shift},
