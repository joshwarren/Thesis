issn = {0035-8711},
journal = {\mnras},
keywords = {cD,galaxies: elliptical and lenticular,galaxies: evolution,galaxies: formation,galaxies: kinematics and dynamics,galaxies: structure},
month = {sep},
number = {4},
pages = {3357--3387},
title = {{The ATLAS3D project - XXV. Two-dimensional kinematic analysis of simulated galaxies and the cosmological origin of fast and slow rotators}},
url = {http://adsabs.harvard.edu/abs/2014MNRAS.444.3357N},
volume = {444},
