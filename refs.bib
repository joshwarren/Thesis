arxivId = {astro-ph/0401416},
author = {{Cid Fernandes}, Roberto and {Gonzalez Delgado}, Rosa M. and Schmitt, Henrique and Storchi-Bergmann, Thaisa and Martins, Lucimara P. and Perez, Enrique and Heckman, Timothy and Leitherer, Claus and Schaerer, Daniel},
doi = {10.1086/382217},
eprint = {0401416},
journal = {\apj},
