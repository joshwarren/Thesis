@article{Kharb2017,
abstract = {We present the results from 1.5 and 5 GHz phase-referenced VLBA and 1.5 GHz Karl G. Jansky Very Large Array (VLA) observations of the Seyfert 2 galaxy KISSR1219, which exhibits double peaked emission lines in its optical spectrum. The VLA and VLBA data reveal a one-sided core-jet structure at roughly the same position angles, providing evidence of an AGN outflow. The absence of dual parsec-scale radio cores puts the binary black hole picture in doubt for the case of KISSR1219. The high brightness temperatures of the parsec-scale core and jet components ({\$}{\textgreater}10{\^{}}6{\$} K) are consistent with this interpretation. Doppler boosting with jet speeds of {\$}\backslashgtrsim0.55c{\$} to {\$}\backslashgtrsim0.25c{\$}, going from parsec- to kpc-scales, at a jet inclination {\$}\backslashgtrsim50{\^{}}\backslashcirc{\$} can explain the jet one-sidedness in this Seyfert 2 galaxy. A blue-shifted broad emission line component in [O {\{}$\backslash$sc iii{\}}] is also indicative of an outflow in the emission line gas at a velocity of {\$}\backslashsim350{\$} km s{\$}{\^{}}{\{}-1{\}}{\$}, while the [O {\{}$\backslash$sc i{\}}] doublet lines suggest the presence of shock-heated gas. A detailed line ratio study using the MAPPINGS III code further suggests that a shock+precursor model can explain the line ionization data well. Overall, our data suggest that the radio outflow in KISSR1219 is pushing the emission line clouds, both ahead of the jet and in a lateral direction, giving rise to the double peak emission line spectra.},
