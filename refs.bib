title = {{Measurement of the Lick indices in early-type galaxies: Line-of-sight velocity distribution corrections for IC 1459}},
url = {http://www.doiserbia.nb.rs/Article.aspx?ID=1450-698X0979019S},
year = {2009}
}
@article{Serra2015a,
